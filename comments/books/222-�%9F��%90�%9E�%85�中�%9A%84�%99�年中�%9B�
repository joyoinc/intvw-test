            	url = "http://www.chinacno.org/index.php?tmpl=component&option=com_jacomment&view=comments&contentoption=com_content&contentid=222&ran=" + Math.random();	            	            	        
            	if(id != 0){
					url += "&currentCommentID=" + id;
            	}
				var req = new Request({
					 method: 'get',
                         url: url,                         
                         onComplete: function(text) { 
						$('jac-wrapper').innerHTML = $('jac-wrapper').innerHTML + text;																		 						
						//$('jacommentid:'+id).getPosition();
						moveBackground(id, 'http://www.chinacno.org/');																																						
							jac_auto_expand_textarea();			 
                        }						
					}).send();					 							
            	});			
				//]]>						
				</script>
            
<!-- JAComment ends -->

		</div>

		
			
